# Multi-stage build for tunn testing
FROM golang:1.25-alpine AS builder

WORKDIR /build

# Install dependencies
RUN apk add --no-cache git make protobuf-dev curl

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build
RUN make build

# Runtime image
FROM alpine:latest

RUN apk add --no-cache ca-certificates curl

WORKDIR /app

# Copy binary
COPY --from=builder /build/bin/tunn /app/tunn

# Create certs directory
RUN mkdir -p /app/certs

ENTRYPOINT ["/app/tunn"]
CMD ["-mode=host"]
